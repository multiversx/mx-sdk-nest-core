{
  "title": "config",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "apps": {
      "type": "object",
      "properties": {
        "api": {
          "type": "object",
          "properties": {
            "urls": {
              "type": "object",
              "properties": {
                "prefix": {
                  "type": "string"
                }
              },
              "required": [
                "prefix"
              ],
              "additionalProperties": false
            },
            "features": {
              "type": "object",
              "properties": {
                "publicApi": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean"
                    },
                    "port": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "enabled",
                    "port"
                  ],
                  "additionalProperties": false
                },
                "privateApi": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean"
                    },
                    "port": {
                      "type": "integer"
                    }
                  },
                  "required": [
                    "enabled",
                    "port"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "publicApi",
                "privateApi"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "urls",
            "features"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "api"
      ],
      "additionalProperties": false
    },
    "libs": {
      "type": "object",
      "properties": {
        "common": {
          "type": "object",
          "properties": {
            "urls": {
              "type": "object",
              "properties": {
                "api": {
                  "type": "string"
                }
              },
              "required": [
                "api"
              ],
              "additionalProperties": false
            },
            "redis": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                }
              },
              "required": [
                "host",
                "port"
              ],
              "additionalProperties": false
            },
            "database": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "tlsAllowInvalidCertificates": {
                  "type": "boolean"
                }
              },
              "required": [
                "host",
                "port",
                "username",
                "password",
                "name",
                "tlsAllowInvalidCertificates"
              ],
              "additionalProperties": false
            },
            "features": {
              "type": "object",
              "properties": {
                "eventsNotifier": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean"
                    },
                    "port": {
                      "type": "integer"
                    },
                    "url": {
                      "type": "string"
                    },
                    "exchange": {
                      "type": "string"
                    },
                    "queue": {
                      "type": "string"
                    },
                    "revertExchange": {
                      "type": "string"
                    },
                    "revertQueue": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "enabled",
                    "port",
                    "url",
                    "exchange",
                    "queue"
                  ],
                  "additionalProperties": false
                },
                "keepAliveAgent": {
                  "type": "object",
                  "properties": {
                    "enabled": {
                      "type": "boolean"
                    }
                  },
                  "required": [
                    "enabled"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "eventsNotifier",
                "keepAliveAgent"
              ],
              "additionalProperties": false
            },
            "nativeAuth": {
              "type": "object",
              "properties": {
                "maxExpirySeconds": {
                  "type": "integer",
                  "minimum": 1
                },
                "acceptedOrigins": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "acceptedOrigins"
              ],
              "additionalProperties": false
            },
            "security": {
              "type": "object",
              "properties": {
                "admins": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            },
            "rateLimiterSecret": {
              "type": "string"
            },
            "keepAliveTimeout": {
              "type": "object",
              "properties": {
                "downstream": {
                  "type": "integer"
                },
                "upstream": {
                  "type": "integer"
                }
              },
              "required": [
                "downstream",
                "upstream"
              ],
              "additionalProperties": false
            },
            "useCachingInterceptor": {
              "type": "boolean"
            },
            "numShards": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "urls",
            "redis",
            "database",
            "features",
            "nativeAuth",
            "security",
            "keepAliveTimeout",
            "numShards"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "common"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "apps",
    "libs"
  ],
  "additionalProperties": false
}
